<Window x:Class="SeyforDatabaseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeyforDatabaseProject"
        xmlns:views="clr-namespace:SeyforDatabaseProject.Views"
        xmlns:equipment="clr-namespace:SeyforDatabaseProject.ViewModel.Equipment;assembly=SeyforDatabaseProject.ViewModel"
        xmlns:rooms="clr-namespace:SeyforDatabaseProject.ViewModel.Rooms;assembly=SeyforDatabaseProject.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <!-- Listing views -->
            <DataTemplate DataType="{x:Type equipment:EquipmentListingVM}">
                <views:EquipmentListView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type rooms:RoomListingVM}">
                <views:RoomListView />
            </DataTemplate>
            
            <!-- Editing views -->
            <DataTemplate DataType="{x:Type equipment:EquipmentEditVM}">
                <views:EquipmentEditView />
            </DataTemplate>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
                Padding="8"
                Background="LightGreen">
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Stretch">
                <Button Content="Equipment"
                        Command="{Binding ShowEquipmentListingCommand}"
                        Width="100"
                        Height="30"
                        Margin="0,0,4,0" />
                <Button Content="Rooms"
                        Command="{Binding ShowRoomListingCommand}"
                        Width="100"
                        Height="30"
                        Margin="0,0,4,0" />
            </StackPanel>
        </Border>

        <ContentControl Grid.Row="2"
                        Margin="16,0,16,0"
                        Content="{Binding CurrentVM}" />
    </Grid>
</Window>