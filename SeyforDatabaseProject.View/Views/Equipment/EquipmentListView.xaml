<UserControl x:Class="SeyforDatabaseProject.Views.Equipment.EquipmentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="EquipmentListView_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Height="28"
                    Margin="8,8,0,8">
            <Label Content="Search"
                   VerticalContentAlignment="Center"/>
            <TextBox 
                     Name="FilterBox"
                     TextChanged="FilterBox_OnTextChanged"
                     Width="192" 
                     VerticalContentAlignment="Center"/>
        </StackPanel>
        <!-- Equipment List -->
        <ListView Grid.Row="1"
                  x:Name="EquipmentItemsListView"
                  ItemsSource="{Binding Items}">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding ID}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Title">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Description">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding Description}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,8">

            <Button Content="Add Equipment"
                    Command="{Binding AddEntryCommand}"
                    Width="100"
                    Height="30"
                    Margin="0,0,4,0"
                    HorizontalAlignment="Center" />
            <Button Content="Edit Equipment"
                    Command="{Binding EditEntryCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=EquipmentItemsListView}"
                    IsEnabled="{Binding SelectedItems.Count, ElementName=EquipmentItemsListView}"
                    Width="100"
                    Height="30"
                    Margin="0,0,4,0" />
        </StackPanel>
    </Grid>
</UserControl>