<UserControl x:Class="SeyforDatabaseProject.Views.EquipmentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SeyforDatabaseProject.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">

            <!-- Equipment List -->
            <ListView x:Name="EquipmentItemsListView"
                      ItemsSource="{Binding Equipment}"
                      SelectedItem="{Binding SelectedEquipment}">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Description">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Padding="0,0,20,0" Text="{Binding Description}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Add Equipment"
                    Command="{Binding AddEntryCommand}"
                    Width="100"
                    Height="30"
                    Margin="0,16,0,0"
                    HorizontalAlignment="Center" />
            <Button Content="Edit Equipment"
                    Command="{Binding EditEntryCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=EquipmentItemsListView}"
                    Width="100"
                    Height="30"
                    Margin="0,8,0,0" />
        </StackPanel>
    </Grid>
</UserControl>