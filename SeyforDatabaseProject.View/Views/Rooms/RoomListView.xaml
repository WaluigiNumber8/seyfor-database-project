<UserControl x:Class="SeyforDatabaseProject.Views.Rooms.RoomListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="RoomListView_OnLoaded"
             Unloaded="RoomListView_OnUnloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Height="28"
                    Margin="8,8,0,8">
            <Label Content="Search"
                   VerticalContentAlignment="Center"/>
            <TextBox 
                Name="FilterBox"
                TextChanged="FilterBox_OnTextChanged"
                Width="192" 
                VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!-- Room List -->
        <ListView Grid.Row="1"
                  x:Name="RoomItemsListView"
                  ItemsSource="{Binding Items}">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Number">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding RoomNumber}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Type">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding RoomType}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Capacity">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding Capacity}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Price (per Night)">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding PricePerNightWithCurrency}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Status">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding AvailabilityStatus}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Equipment">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding EquipmentText}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,8">

            <Button Content="Add Room"
                    Command="{Binding AddEntryCommand}"
                    Width="100"
                    Height="30"
                    Margin="0,0,4,0"
                    HorizontalAlignment="Center" />
            <Button Content="Edit Room"
                    Command="{Binding EditEntryCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=RoomItemsListView}"
                    IsEnabled="{Binding SelectedItems.Count, ElementName=RoomItemsListView}"
                    Width="100"
                    Height="30"
                    Margin="0,0,4,0" />
        </StackPanel>
    </Grid>
</UserControl>