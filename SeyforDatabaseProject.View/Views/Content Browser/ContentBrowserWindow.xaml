<Window x:Class="SeyforDatabaseProject.Views.Content_Browser.ContentBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="ContentBrowserWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1"
               Content="Pick Guest"
               HorizontalAlignment="Center"
               FontSize="18"
               FontWeight="Bold" />
        <Separator Grid.Row="2" />
        <ListView Grid.Row="3"
                  ItemsSource="{Binding PickableItems}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="0,0,20,0" Text="{Binding ID}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Title">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding TextIdentifier}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0">
            <Button Content="Select"
                    Command="{Binding SelectCommand}"
                    Width="100"
                    Height="30"
                    Margin="0,0,4,0"
                    HorizontalAlignment="Center" />
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=EquipmentItemsListView}"
                    Width="100"
                    Height="30"
                    Margin="0,0,4,0" />
        </StackPanel>
    </Grid>
</Window>