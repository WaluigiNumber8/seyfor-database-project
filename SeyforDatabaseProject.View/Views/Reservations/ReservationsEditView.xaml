<UserControl x:Class="SeyforDatabaseProject.Views.Reservations.ReservationsEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SeyforDatabaseProject.Views.Reservations"
             xmlns:markupExtensions="clr-namespace:SeyforDatabaseProject.Views.MarkupExtensions"
             xmlns:resData="clr-namespace:SeyforDatabaseProject.Model.Data.Reservations;assembly=SeyforDatabaseProject.Model"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1"
               Content="{Binding HeaderText, FallbackValue=Add Reservation}"
               HorizontalAlignment="Center"
               FontSize="18"
               FontWeight="Medium" />
        <Separator Grid.Row="2" />
        <ScrollViewer Grid.Row="3">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Stretch">
                <Label Content="Guest" />
                <!-- Guest Picker -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Content="{Binding CurrentGuestText, FallbackValue=Guest Name Here}" />
                    <Button Grid.Column="1"
                            Content="Select"
                            Command="{Binding SelectGuestCommand}"
                            Padding="6,0,6,0" />
                </Grid>
                <Label Content="Room" />
                <!-- Room Picker -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Content="{Binding CurrentRoomText, FallbackValue=Room number Here}" />
                    <Button Grid.Column="1"
                            Content="Select"
                            Command="{Binding SelectRoomCommand}"
                            Padding="6,0,6,0" />
                </Grid>
                <Label Content="Start Date" />
                <DatePicker SelectedDate="{Binding DateStart, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,8" />
                <Label Content="End Date" />
                <DatePicker SelectedDate="{Binding DateEnd, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,8" />
                <Label Content="Status" />
                <ComboBox
                    ItemsSource="{Binding Source={markupExtensions:EnumBindingSource {x:Type resData:ReservationStatus}}}"
                    SelectedItem="{Binding State}"
                    Margin="0,0,0,8" />

                <Label Content="Total Price" />
                <Label Content="{Binding PriceTotal, FallbackValue=1000 KÄ}"
                       Width="200"
                       Height="30"
                       Margin="0,0,0,16"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"
                       FontSize="16" />
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,16">

            <Button Content="Remove"
                    Command="{Binding RemoveCommand}"
                    Visibility="{Binding ShowRemoveButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Width="100"
                    Height="30"
                    Margin="0,0,64,0" />
            <Button Content="{Binding SaveButtonText, FallbackValue=Save}"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Height="30"
                    Margin="0,0,8,0" />
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Height="30" />
        </StackPanel>
    </Grid>
</UserControl>